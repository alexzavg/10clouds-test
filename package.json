{
  "name": "cypress-tests",
  "version": "1.0.0",
  "description": "Fortress tests",
  "main": "index.js",
  "scripts": {
    "clean:reports": "rm -R -f cypress/reports && mkdir cypress/reports && mkdir cypress/reports/mochareports",
    "pretest": "npm run clean:reports",
    "cy:run:local": "node_modules/.bin/cypress run --config-file cypress-local.json --spec \"cypress/integration/e2e/**/*.spec.js\" --browser chrome",
    "cy:run:dev": "node_modules/.bin/cypress run --config-file cypress-dev.json --spec \"cypress/integration/e2e/**/*.spec.js\" --browser chrome",
    "cy:run:stage": "node_modules/.bin/cypress run --config-file cypress-stage.json --spec \"cypress/integration/e2e/**/*.spec.js\" --browser chrome",
    "combine-reports": "mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/mochareports/report.json",
    "generate-report": "marge cypress/reports/mochareports/report.json -f report -o cypress/reports/mochareports",
    "posttest": "npm run combine-reports && npm run generate-report",
    "test:local": "npm run pretest && npm run cy:run:local && npm run posttest",
    "test:dev": "npm run pretest && npm run cy:run:dev && npm run posttest",
    "test:stage": "npm run pretest && npm run cy:run:stage && npm run posttest",
    "open:local": "node_modules/.bin/cypress open --config-file cypress-local.json",
    "open:dev": "node_modules/.bin/cypress open --config-file cypress-dev.json",
    "open:stage": "node_modules/.bin/cypress open --config-file cypress-stage.json"
  },
  "author": "Oleksandr Zavhorodnii",
  "license": "ISC",
  "devDependencies": {
    "@bahmutov/cypress-extends": "^1.1.0",
    "@cypress/skip-test": "^2.6.0",
    "authenticator": "^1.1.5",
    "cypress": "^7.5.0",
    "cypress-commands": "^1.1.0",
    "cypress-dark": "^1.7.14",
    "cypress-localstorage-commands": "^1.4.5",
    "cypress-mailosaur": "^2.3.2",
    "cypress-multi-reporters": "^1.5.0",
    "mocha": "^8.4.0",
    "mochawesome": "^6.2.2",
    "mochawesome-merge": "^4.2.0",
    "mochawesome-report-generator": "^5.2.0"
  }
}
