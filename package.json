{
  "name": "cypress-tests",
  "version": "1.0.0",
  "description": "Britecore automated tests",
  "main": "index.js",
  "scripts": {
    "cypress-open": "node_modules/.bin/cypress open",
    "clean:reports": "rm -R -f cypress/reports && mkdir cypress/reports && mkdir cypress/reports/mochareports",
    "pretest-all-chrome": "npm run clean:reports",
    "cypress-run-all-chrome": "node_modules/.bin/cypress run --browser chrome --record --key d7f0f624-335c-4d34-a515-96812158c1db",
    "combine-reports": "mochawesome-merge cypress/reports/mocha/*.json > cypress/reports/mochareports/report.json",
    "generate-report": "marge cypress/reports/mochareports/report.json -f report -o cypress/reports/mochareports",
    "posttest-all-chrome": "npm run combine-reports && npm run generate-report",
    "test-all-chrome" : "npm run cypress-run-all-chrome || npm run posttest-all-chrome",
    "report:copyScreenshots": "cp -r cypress/screenshots cypress/results/html/screenshots"
  },
  "author": "Oleksandr Zavhorodnii",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^5.6.0",
    "cypress-multi-reporters": "^1.4.0",
    "mocha": "^8.2.1",
    "mochawesome": "^6.2.1",
    "mochawesome-merge": "^4.2.0",
    "mochawesome-report-generator": "^5.1.0"
  }
}
